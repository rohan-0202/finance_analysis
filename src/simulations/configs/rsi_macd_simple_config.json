{
    "simulation": {
      "name": "RSI+MACD Strategy Random Stock Testing",
      "description": "Testing RSI+MACD strategy on 50 random sets of stocks over 2021-2025",
      "version": "1.0",
      "created_at": "2025-03-30",
      "data_source": {
        "db_name": "stock_data.db"
      },
      "runs": [
        {
          "id": "rsi_macd_base",
          "strategy": {
            "name": "rsi_macd_strategy",
            "parameters": {
              "rsi_period": 14,
              "overbought_threshold": 60,
              "oversold_threshold": 40,
              "fast_period": 12,
              "slow_period": 26,
              "signal_period": 9,
              "max_capital_per_position": 0.2
            }
          },
          "portfolio": {
            "initial_capital": 10000.0,
            "commission": 0.001,
            "allow_short_selling": false,
            "allow_margin_trading": false
          },
          "timeframe": {
            "start_date": "2021-01-01",
            "end_date": "2025-12-31",
            "data_buffer_months": 2
          },
          "data_selection": {
            "type": "random",
            "ticker_selection": {
              "method": "random",
              "count": 20,
              "filter": {
                "market_cap_min": 1000000000,
                "exclude_tickers": []
              }
            }
          },
          "benchmark": {
            "ticker": "SPY",
            "use_benchmark": true
          },
          "output": {
            "save_results": true,
            "results_path": "./results/rsi_macd_random/",
            "plot_equity_curve": true,
            "save_trades": true,
            "calculate_metrics": [
              "sharpe_ratio", 
              "sortino_ratio", 
              "max_drawdown", 
              "volatility", 
              "calmar_ratio", 
              "win_rate", 
              "profit_factor", 
              "total_return"
            ]
          }
        }
      ],
      "random_testing": [
        {
          "id": "rsi_macd_random_test",
          "base_run_id": "rsi_macd_base",
          "ticker_selection": {
            "method": "random",
            "count": 20,
            "filter": {
              "market_cap_min": 1000000000,
              "exclude_tickers": []
            },
            "iterations": 5,
            "seeds": [42, 101]
          },
          "output_prefix": "random_run_"
        }
      ],
      "comparative_analysis": {
        "enabled": true,
        "metrics": ["total_return", "sharpe_ratio", "max_drawdown", "win_rate", "profit_factor"],
        "output_path": "./results/rsi_macd_random/comparative_analysis.json",
        "visualizations": {
          "heatmaps": true,
          "scatter_plots": true,
          "parameter_sensitivity": false
        }
      }
    }
  }